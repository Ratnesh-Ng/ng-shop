/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": [
      "ES2022",
      "dom"
    ],
    "paths": {
      "@shared/const/*": ["./src/app/shared/constants/*"],
      "@shared/base/*": ["./src/app/shared/base/*"],
      "@core/base/*": ["./src/app/core/base/*"],
      "@core/enums/*": ["./src/app/core/enums/*"],
      "@core/components/*": ["./src/app/core/components/*"],
      "@core/directives/*": ["./src/app/core/directives/*"],
      "@core/pipe/*": ["./src/app/core/pipe/*"],
      "@app/faker/*": ["./src/app/core/faker/*"],
      "@core/utils/*": ["./src/app/core/utils/*"],
      "@core/interceptors/*": ["./src/app/core/interceptors/*"],
      "@app/modals/*": ["./src/app/core/modals/*"],
      "@store/*": ["./src/app/store/*"],
      "@core/service/*": ["./src/app/core/services/*"],
      "@environment/*": ["./src/environment/*"],
      "@services/*": ["./src/app/services/*"],
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
